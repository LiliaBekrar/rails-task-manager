<h1>New task</h1>
<%= form_for(@task) do |f| %>
  <div class="form-group my-2">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group my-2">
    <%= f.label :details %>
    <%= f.text_field :details, class: "form-control" %>
  </div>
  <div class="form-group my-2">
    <%= f.check_box :completed %>
    <%= f.label :completed %>
  </div>
  <%= f.submit class: ["btn", "btn-primary", "mt-2"] %>
<% end %>
